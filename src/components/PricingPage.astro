---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, getAppUrl, type Locale } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const checkIcon = `<svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
const clockIcon = `<svg class="clock" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>`;
---

<BaseLayout
  title={t('pricing.meta.title', locale)}
  description={t('pricing.meta.description', locale)}
  locale={locale}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": t('pricing.faq.q1.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q1.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q2.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q2.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q3.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q3.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q4.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q4.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q5.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q5.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q6.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q6.answer', locale)
          }
        }
      ]
    })} />
  </Fragment>

  <section class="pricing-hero" aria-labelledby="pricing-title">
    <div class="container text-center">
      <div class="fade-up">
        <h1 id="pricing-title" class="gradient-text">{t('pricing.hero.title', locale)}</h1>
        <p class="price-subtitle">{t('pricing.hero.subtitle', locale)}</p>
      </div>
    </div>
  </section>

  <section class="pricing-table" aria-label="Pricing plans">
    <div class="container">
      <div class="plans-grid" role="list">
        <!-- Free Plan -->
        <article class="plan-card glass fade-up featured" role="listitem">
          <div class="plan-badge">{t('pricing.free.badge', locale)}</div>
          <div class="plan-header">
            <h2>{t('pricing.free.name', locale)}</h2>
            <div class="plan-price">
              <span class="amount">{t('pricing.free.price', locale)}</span>
            </div>
            <p class="plan-description">{t('pricing.free.description', locale)}</p>
          </div>

          <ul class="plan-features">
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature1', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature2', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature3', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature4', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature5', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.free.feature6', locale)}</li>
          </ul>

          <a href={getAppUrl(locale)} class="btn btn-primary btn-lg btn-confetti btn-full">
            {t('pricing.free.cta', locale)}
          </a>
        </article>

        <!-- Pro Plan (Coming Soon) -->
        <article class="plan-card glass fade-up pro-coming-soon" role="listitem" data-delay="150">
          <div class="plan-badge pro-badge">{t('pricing.pro.badge', locale)}</div>
          <div class="plan-header">
            <h2>{t('pricing.pro.name', locale)}</h2>
            <div class="plan-price">
              <span class="amount coming-soon-text">{t('pricing.pro.price', locale)}</span>
            </div>
            <p class="plan-description">{t('pricing.pro.description', locale)}</p>
          </div>

          <ul class="plan-features coming-soon-features">
            <li><Fragment set:html={clockIcon} />{t('pricing.pro.feature1', locale)}</li>
            <li><Fragment set:html={clockIcon} />{t('pricing.pro.feature2', locale)}</li>
            <li><Fragment set:html={clockIcon} />{t('pricing.pro.feature3', locale)}</li>
          </ul>

          <button class="btn btn-secondary btn-lg btn-full" disabled>
            {t('pricing.pro.cta', locale)}
          </button>
        </article>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section" aria-labelledby="faq-title">
    <div class="container">
      <h2 id="faq-title" class="text-center fade-up">{t('pricing.faq.title', locale)}</h2>

      <div class="faq-grid">
        <div class="faq-item glass fade-up">
          <h3>{t('pricing.faq.q1.question', locale)}</h3>
          <p>{t('pricing.faq.q1.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="100">
          <h3>{t('pricing.faq.q2.question', locale)}</h3>
          <p>{t('pricing.faq.q2.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="200">
          <h3>{t('pricing.faq.q3.question', locale)}</h3>
          <p>{t('pricing.faq.q3.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="300">
          <h3>{t('pricing.faq.q4.question', locale)}</h3>
          <p>{t('pricing.faq.q4.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="400">
          <h3>{t('pricing.faq.q5.question', locale)}</h3>
          <p>{t('pricing.faq.q5.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="500">
          <h3>{t('pricing.faq.q6.question', locale)}</h3>
          <p>{t('pricing.faq.q6.answer', locale)}</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    import confetti from 'canvas-confetti';

    // Confetti on main CTA
    document.querySelectorAll('.btn-confetti').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const rect = (e.target as HTMLElement).getBoundingClientRect();
        const x = (rect.left + rect.width / 2) / window.innerWidth;
        const y = (rect.top + rect.height / 2) / window.innerHeight;

        confetti({
          particleCount: 150,
          spread: 100,
          origin: { x, y },
          colors: ['#7ec786', '#5fb0c4', '#f0c05c', '#4eeab5'],
          disableForReducedMotion: true
        });
      });
    });
  </script>
</BaseLayout>

<style>
  @import '../styles/pricing.css';

  .coming-soon-text {
    font-size: var(--text-2xl);
  }

  .pro-coming-soon {
    opacity: 0.85;
  }

  .pro-badge {
    background: linear-gradient(135deg, var(--accent-secondary), var(--accent-tertiary));
  }

  .coming-soon-features .clock {
    color: var(--accent-secondary);
  }

  .coming-soon-features li {
    opacity: 0.7;
  }
</style>
