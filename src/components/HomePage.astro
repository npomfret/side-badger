  <script>
    import confetti from 'canvas-confetti';

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // ===== WHAT'S IT FOR CARD ROTATION =====
    // Show 6 of 7 cards, rotating daily based on UTC day
    const whatsItForKeys = [
      'billSplitting',
      'expenseSharing',
      'budgetTracking',
      'reduceTransactions',
      'travel',
      'gifting',
      'celebrations',
      'weddings',
      'sports',
      'work',
      'school',
      'renovations',
      'subscriptions',
    ];
    const visibleCount = 6;
    const daySeed = new Date().getUTCDay();
    const startIndex = daySeed % whatsItForKeys.length;
    const visibleKeys = new Set<string>();

    for (let i = 0; i < Math.min(visibleCount, whatsItForKeys.length); i += 1) {
      visibleKeys.add(whatsItForKeys[(startIndex + i) % whatsItForKeys.length]);
    }

    document.querySelectorAll<HTMLElement>('[data-whats-it-for]').forEach((card) => {
      const key = card.dataset.whatsItFor;
      if (key && !visibleKeys.has(key)) {
        card.classList.add('is-hidden');
      }
    });

    // ===== 3D CARD TILT =====
    if (!prefersReducedMotion) {
      document.querySelectorAll('.feature-card').forEach(card => {
        const cardEl = card as HTMLElement;

        cardEl.addEventListener('mousemove', (e: MouseEvent) => {
          const rect = cardEl.getBoundingClientRect();
          const x = e.clientX - rect.left;
          const y = e.clientY - rect.top;
          const centerX = rect.width / 2;
          const centerY = rect.height / 2;
          const rotateX = (y - centerY) / 10;
          const rotateY = (centerX - x) / 10;

          cardEl.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.02)`;
        });

        cardEl.addEventListener('mouseleave', () => {
          cardEl.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1)';
        });
      });
    }

    // ===== HERO TITLE REVEAL =====
    const heroTitle = document.querySelector('#hero-title') as HTMLElement | null;
    if (heroTitle) {
      if (prefersReducedMotion) {
        heroTitle.classList.add('hero-title-visible');
      } else {
        requestAnimationFrame(() => {
          heroTitle.classList.add('hero-title-animate');
        });
      }
    }

    // ===== AUTO-ASSIGN STAGGER DELAYS =====
    // Assigns delays to fade-up elements without explicit data-delay
    // The actual animation is handled by BaseLayout's IntersectionObserver
    document.querySelectorAll('.fade-up').forEach((el, index) => {
      if (!(el as HTMLElement).dataset.delay) {
        (el as HTMLElement).dataset.delay = String((index % 6) * 100);
      }
    });

    // ===== BUTTON RIPPLE EFFECT =====
    document.querySelectorAll('.btn').forEach(btn => {
      btn.addEventListener('click', function(e: MouseEvent) {
        const button = e.currentTarget as HTMLElement;
        const rect = button.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        const ripple = document.createElement('span');
        ripple.className = 'btn-ripple';
        ripple.style.left = `${x}px`;
        ripple.style.top = `${y}px`;

        button.appendChild(ripple);

        setTimeout(() => ripple.remove(), 600);
      });
    });

    // ===== SATISFYING CONFETTI BURST =====
    const fireConfetti = (x: number, y: number) => {
      // First burst - main explosion
      confetti({
        particleCount: 80,
        spread: 60,
        origin: { x, y },
        colors: ['#7ec786', '#5fb0c4', '#f0c05c', '#4eeab5'],
        disableForReducedMotion: true,
        startVelocity: 30,
        gravity: 0.8,
        scalar: 1.2
      });

      // Second burst - delayed sparkle
      setTimeout(() => {
        confetti({
          particleCount: 40,
          spread: 100,
          origin: { x, y },
          colors: ['#ffffff', '#7ec786', '#5fb0c4'],
          disableForReducedMotion: true,
          startVelocity: 20,
          gravity: 0.6,
          scalar: 0.8,
          shapes: ['circle']
        });
      }, 150);

      // Third burst - side cannons
      setTimeout(() => {
        confetti({
          particleCount: 30,
          angle: 60,
          spread: 40,
          origin: { x: x - 0.1, y },
          colors: ['#7ec786', '#f0c05c'],
          disableForReducedMotion: true
        });
        confetti({
          particleCount: 30,
          angle: 120,
          spread: 40,
          origin: { x: x + 0.1, y },
          colors: ['#5fb0c4', '#4eeab5'],
          disableForReducedMotion: true
        });
      }, 100);
    };

    document.querySelectorAll('.btn-confetti').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const rect = (e.currentTarget as HTMLElement).getBoundingClientRect();
        const x = (rect.left + rect.width / 2) / window.innerWidth;
        const y = (rect.top + rect.height / 2) / window.innerHeight;
        fireConfetti(x, y);
      });
    });

    // Random celebration (5% chance)
    if (Math.random() < 0.05 && !prefersReducedMotion) {
      setTimeout(() => {
        fireConfetti(0.5, 0.6);
      }, 2000);
    }
  </script>
