---
import { t, type Locale } from '../i18n';

interface Props {
  title: string;
  endpoint: string;
  locale: Locale;
}

const { title, endpoint, locale } = Astro.props;
const apiBaseUrl = t('api.baseUrl');

// Translations for client-side error handling
const translations = {
  loading: t('policy.loading', locale),
  errorGeneric: t('policy.error.generic', locale),
  errorConfig: t('policy.error.config', locale),
  errorUnavailable: t('policy.error.unavailable', locale),
  errorEmpty: t('policy.error.empty', locale),
  errorTryAgain: t('policy.error.tryAgain', locale),
};
---

<section class="legal-page" aria-labelledby="policy-title">
  <div class="container">
    <div class="legal-content glass fade-up">
      <h1 id="policy-title" class="sr-only">{title}</h1>
      <div
        class="policy-content markdown-content"
        data-api-base={apiBaseUrl}
        data-endpoint={endpoint}
        data-translations={JSON.stringify(translations)}
        aria-live="polite"
        aria-busy="true"
      >
        <div class="loading-state" role="status">
          <div class="spinner" aria-hidden="true"></div>
          <p>{translations.loading}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { marked } from 'marked';

  interface Translations {
    loading: string;
    errorGeneric: string;
    errorConfig: string;
    errorUnavailable: string;
    errorEmpty: string;
    errorTryAgain: string;
  }

  function showError(container: Element, message: string, tryAgainText: string) {
    container.setAttribute('aria-busy', 'false');
    container.innerHTML = `
      <div class="error-state" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <p>${message}</p>
        <p class="text-muted">${tryAgainText}</p>
      </div>
    `;
  }

  function initPolicyLoaders() {
    const containers = document.querySelectorAll('.policy-content[data-api-base]');

    containers.forEach(async (container) => {
      const apiBase = container.getAttribute('data-api-base');
      const endpoint = container.getAttribute('data-endpoint');
      const translationsStr = container.getAttribute('data-translations');

      let translations: Translations;
      try {
        translations = JSON.parse(translationsStr || '{}');
      } catch {
        translations = {
          loading: 'Loading...',
          errorGeneric: 'Unable to load policy.',
          errorConfig: 'Configuration error.',
          errorUnavailable: 'Policy not available.',
          errorEmpty: 'Policy content is empty.',
          errorTryAgain: 'Please try again later or contact support.',
        };
      }

      if (!apiBase || !endpoint) {
        showError(container, translations.errorConfig, translations.errorTryAgain);
        return;
      }

      try {
        const res = await fetch(`${apiBase}${endpoint}`);

        if (!res.ok) {
          showError(container, `${translations.errorGeneric} (${res.status})`, translations.errorTryAgain);
          return;
        }

        const contentType = res.headers.get('content-type') || '';
        if (contentType.includes('application/json')) {
          showError(container, translations.errorUnavailable, translations.errorTryAgain);
          return;
        }

        const markdown = await res.text();

        if (!markdown || markdown.trim().length === 0) {
          showError(container, translations.errorEmpty, translations.errorTryAgain);
          return;
        }

        container.setAttribute('aria-busy', 'false');
        container.innerHTML = marked.parse(markdown) as string;
      } catch (err) {
        showError(container, translations.errorGeneric, translations.errorTryAgain);
      }
    });
  }

  initPolicyLoaders();
</script>

<style>
  @import '../styles/policy.css';
</style>
