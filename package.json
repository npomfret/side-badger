{
  "name": "side-badger",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "test": "vitest",
    "docker:start": "docker compose -f docker-compose.yml -f docker-compose.local.yml -f docker-compose.watch.yml up --build -d && docker compose -f docker-compose.yml -f docker-compose.local.yml -f docker-compose.watch.yml watch",
    "docker:stop": "docker compose -f docker-compose.yml -f docker-compose.local.yml -f docker-compose.watch.yml down",
    "docker:restart": "npm run docker:stop && npm run docker:start",
    "docker:logs": "docker logs -f side-badger-website",
    "i18n": "node scripts/i18n-manager.mjs",
    "i18n:list": "node scripts/i18n-manager.mjs list",
    "i18n:audit": "node scripts/i18n-manager.mjs audit",
    "i18n:stats": "node scripts/i18n-manager.mjs stats",
    "i18n:sync": "node scripts/i18n-manager.mjs sync"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.2.1",
    "@tsparticles/slim": "^3.7.1",
    "@types/dompurify": "^3.0.5",
    "astro": "^5.0.0",
    "canvas-confetti": "^1.9.3",
    "dompurify": "^3.3.1",
    "github-markdown-css": "^5.8.1",
    "lucide-astro": "^0.468.0",
    "marked": "^17.0.1",
    "marked-smartypants": "^1.1.11",
    "tsparticles": "^3.7.1"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.6.4",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  }
}
