---
import CanopyBloom from '../components/CanopyBloom.astro';
import EasterEggs from '../components/EasterEggs.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import LanguageDetection from '../components/LanguageDetection.astro';
import { t, locales, logoLocales, getLocalizedPath, isRTL, getAppUrl, getFormattedDate, type Locale } from '../i18n';

interface Props {
  title: string;
  description?: string;
  locale?: Locale;
}

const {
  title,
  description: descriptionProp,
  locale = 'en',
} = Astro.props;

const description = descriptionProp ?? t('meta.description', locale);

// Use locale's logo if available, otherwise fall back to English
const logoLocale = logoLocales.includes(locale) ? locale : 'en';
const smallLogoPath = `/images/${logoLocale}/logo-transparent-small.png`;
const largeLogoPath = `/images/${logoLocale}/logo-large-transparent.png`;
const socialImagePath = `/images/${logoLocale}/logo-large-transparent-1200x628.png`;

const currentPath = Astro.url.pathname;
const siteUrl = Astro.site?.origin || 'https://sidebadger.com';
---

<!DOCTYPE html>
<html lang={locale} dir={isRTL(locale) ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#F0FDF4" />

    <!-- hreflang tags for SEO -->
    {locales.map((loc) => (
      <link
        rel="alternate"
        hreflang={loc}
        href={`${siteUrl}${getLocalizedPath(currentPath, loc)}`}
      />
    ))}
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}${getLocalizedPath(currentPath, 'en')}`} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Side Badger" />
    <meta property="og:locale" content={{
      en: 'en_US',
      uk: 'uk_UA',
      es: 'es_ES',
      ja: 'ja_JP',
      ar: 'ar_AE'
    }[locale] || 'en_US'} />

    <meta property="og:image" content={socialImagePath} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImagePath} />

    <link rel="icon" type="image/png" href="/images/logo-face-only-large.png" />
    <title>{title}</title>

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Side Badger",
      "url": "https://sidebadger.com",
      "logo": `https://sidebadger.com${largeLogoPath}`,
      "sameAs": []
    })} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Side Badger",
        "url": "https://sidebadger.com"
      }
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">{t('a11y.skipToContent', locale)}</a>
    <CanopyBloom />
    <EasterEggs />
    <LanguageDetection currentLocale={locale} />
    <div id="cursor-glow" aria-hidden="true"></div>

    <slot name="header">
      <header class="site-header" role="banner">
        <nav class="header-nav container" aria-label={t('a11y.mainNavigation', locale)}>
          <a href={getLocalizedPath('/', locale)} class="logo" aria-label={t('a11y.homeLink', locale)}>
            <div class="logo-glow-wrapper">
              <div class="logo-glow-spacer"></div>
              <div class="logo-glow"></div>
              <img src={smallLogoPath} alt={t('header.logoText', locale)} height="100" />
            </div>
          </a>

          <ul class="nav-links flex items-center gap-lg" role="list">
            <li>
              <LanguageSwitcher currentLocale={locale} currentPath={currentPath} />
            </li>
            <li><a href={getAppUrl(locale)} class="btn btn-primary btn-launch">
              {t('header.launchApp', locale)}
              <span class="sr-only">{t('a11y.externalLink', locale)}</span>
            </a></li>
          </ul>
        </nav>
      </header>
    </slot>

    <main id="main-content">
      <slot />
    </main>

    <footer class="site-footer" role="contentinfo">
      <div class="container">
        <nav class="footer-grid" aria-label={t('a11y.footerNavigation', locale)}>
          <div class="footer-brand">
            <a href={getLocalizedPath('/', locale)} class="logo" aria-label={t('a11y.homeLink', locale)}>
              <img src={smallLogoPath} alt={t('header.logoText', locale)} height="28" />
            </a>
            <p class="text-muted text-sm" set:html={t('footer.tagline', locale)} />
          </div>

          <div class="footer-links">
            <h4 id="footer-product-heading">{t('footer.product', locale)}</h4>
            <ul aria-labelledby="footer-product-heading" role="list">
              <li><a href={getLocalizedPath('/pricing', locale)}>{t('footer.pricing', locale)}</a></li>
              <li>
                <a href={getAppUrl(locale)}>
                  {t('footer.launchApp', locale)}
                  <span class="sr-only">{t('a11y.externalLink', locale)}</span>
                </a>
              </li>
            </ul>
          </div>

          <div class="footer-links">
            <h4 id="footer-legal-heading">{t('footer.legal', locale)}</h4>
            <ul aria-labelledby="footer-legal-heading" role="list">
              <li><a href={getLocalizedPath('/privacy', locale)}>{t('footer.privacy', locale)}</a></li>
              <li><a href={getLocalizedPath('/terms', locale)}>{t('footer.terms', locale)}</a></li>
              <li><a href={getLocalizedPath('/cookies', locale)}>{t('footer.cookies', locale)}</a></li>
            </ul>
          </div>
        </nav>

        <div class="footer-bottom flex items-center justify-between">
          <p class="text-muted text-sm">&copy; {getFormattedDate(locale)} {t('footer.copyright', locale)}</p>
          <p class="text-muted text-sm">{t('footer.madeWith', locale)}</p>
        </div>
      </div>
    </footer>

    <script>
      // Runtime motion preference listener
      const motionQuery = window.matchMedia('(prefers-reduced-motion: reduce)');
      const handleMotionPreference = (e: MediaQueryListEvent | MediaQueryList) => {
        document.body.classList.toggle('reduce-motion', e.matches);
      };
      handleMotionPreference(motionQuery);
      motionQuery.addEventListener('change', handleMotionPreference);

      // Scroll-triggered fade-up animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.fade-up').forEach((el) => observer.observe(el));

      // Cursor glow effect (cursor aurora)
      const cursorGlow = document.getElementById('cursor-glow');
      let mouseX = 0, mouseY = 0;
      let glowX = 0, glowY = 0;

      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
      });

      function animateCursor() {
        // Smooth interpolation (0.08 factor for dreamy lag)
        glowX += (mouseX - glowX) * 0.08;
        glowY += (mouseY - glowY) * 0.08;

        if (cursorGlow) {
          cursorGlow.style.transform = `translate(${glowX - 300}px, ${glowY - 300}px)`;
        }

        requestAnimationFrame(animateCursor);
      }

      // Only enable cursor glow on non-touch devices
      if (window.matchMedia('(pointer: fine)').matches) {
        animateCursor();
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  @import '../styles/layout.css';
</style>
