              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3>{t('features.groups.title', locale)}</h3>
          <p>{t('features.groups.desc', locale)}</p>
        </div>

        <!-- Invites -->
        <div class="feature-card glass fade-up" data-delay="50">
          <div class="feature-icon">
