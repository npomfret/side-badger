---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Pricing - Side Badger | It's Free. Seriously.">
  <section class="pricing-hero">
    <div class="container text-center">
      <div class="fade-up">
        <h1>
          <span class="strikethrough">$99/month</span>
          <span class="strikethrough">$49/month</span>
          <span class="strikethrough">$9/month</span>
        </h1>
        <h1 class="price-reveal gradient-text">$0</h1>
        <p class="price-subtitle">Forever. For real. We're not kidding.</p>
      </div>
    </div>
  </section>

  <section class="pricing-table">
    <div class="container">
      <div class="plans-grid">
        <!-- The Only Plan -->
        <div class="plan-card glass fade-up featured">
          <div class="plan-badge">The Only Plan</div>
          <div class="plan-header">
            <h2>Full Badger</h2>
            <div class="plan-price">
              <span class="currency">$</span>
              <span class="amount">0</span>
              <span class="period">/forever</span>
            </div>
            <p class="plan-description">Everything. All of it. No limits. We're serious.</p>
          </div>

          <ul class="plan-features">
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Unlimited groups
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Unlimited expenses
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Unlimited members per group
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Zero tracking
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Zero ads
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Full badger energy
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              A warm fuzzy feeling
            </li>
          </ul>

          <a href="https://app.sidebadger.com" class="btn btn-primary btn-lg btn-confetti btn-full" target="_blank" rel="noopener">
            Start Splitting Bills
          </a>
        </div>

        <!-- Fake Enterprise Plan -->
        <div class="plan-card glass fade-up enterprise" data-delay="150">
          <div class="plan-badge enterprise-badge">Enterprise</div>
          <div class="plan-header">
            <h2>Mega Badger</h2>
            <div class="plan-price">
              <span class="currency">$</span>
              <span class="amount">???</span>
              <span class="period">/???</span>
            </div>
            <p class="plan-description">For when you need to have a meeting about having a meeting.</p>
          </div>

          <ul class="plan-features">
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Everything in Full Badger
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              A fancy PDF report
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Synergy optimization
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              Blockchain something
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              AI-powered buzzwords
            </li>
            <li>
              <svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
              A real person to talk to*
            </li>
          </ul>

          <button class="btn btn-secondary btn-lg btn-full" id="enterprise-btn">
            Contact Sales
          </button>

          <p class="enterprise-note text-muted text-sm">
            *We will talk about badgers exclusively
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2 class="text-center fade-up">Questions You Might Have</h2>

      <div class="faq-grid">
        <div class="faq-item glass fade-up">
          <h3>Is it really free?</h3>
          <p>Yes. We're not hiding features behind a paywall. We're not going to suddenly charge you after you're hooked. It's a demo/white-label implementation. Free means free.</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="100">
          <h3>What's the catch?</h3>
          <p>No catch. Side Badger is a demonstration of what a white-label expense splitting app can look like. We built it to show off the technology, and we figured why not make it actually useful while we're at it?</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="200">
          <h3>Will you sell my data?</h3>
          <p>Absolutely not. We don't collect personal data beyond what's necessary to run the app. We have zero trackers, zero analytics pixels, and zero interest in your shopping habits.</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="300">
          <h3>Why a badger?</h3>
          <p>Why NOT a badger? Badgers are determined, resourceful, and work well in groups. Just like you when you're trying to figure out who owes what for that Airbnb.</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="400">
          <h3>Can I use this for my business?</h3>
          <p>Sure! If you want to track shared expenses for your small business or team, go for it. It's free. We won't judge.</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="500">
          <h3>What if I find a bug?</h3>
          <p>First of all, how dare you imply our code has bugs. Second, yeah probably there are bugs. This is a demo. Be gentle with us.</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    import confetti from 'canvas-confetti';

    // Confetti on main CTA
    document.querySelectorAll('.btn-confetti').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const rect = (e.target as HTMLElement).getBoundingClientRect();
        const x = (rect.left + rect.width / 2) / window.innerWidth;
        const y = (rect.top + rect.height / 2) / window.innerHeight;

        confetti({
          particleCount: 150,
          spread: 100,
          origin: { x, y },
          colors: ['#8b5cf6', '#22d3ee', '#ec4899', '#34d399'],
          disableForReducedMotion: true
        });
      });
    });

    // Enterprise button easter egg
    document.getElementById('enterprise-btn')?.addEventListener('click', () => {
      alert("ðŸ¦¡ HONK HONK! Just kidding, there's no enterprise tier. The free plan has everything. Go use that instead!");

      confetti({
        particleCount: 200,
        spread: 160,
        origin: { y: 0.6 },
        colors: ['#8b5cf6', '#22d3ee', '#ec4899'],
        disableForReducedMotion: true
      });
    });

    // Price reveal animation with confetti
    setTimeout(() => {
      const priceReveal = document.querySelector('.price-reveal');
      if (priceReveal) {
        priceReveal.classList.add('revealed');
        confetti({
          particleCount: 80,
          spread: 70,
          origin: { y: 0.3 },
          colors: ['#34d399', '#22d3ee', '#8b5cf6'],
          disableForReducedMotion: true
        });
      }
    }, 800);
  </script>
</BaseLayout>

<style>
  /* Pricing Hero */
  .pricing-hero {
    padding: var(--space-4xl) 0 var(--space-2xl);
  }

  .pricing-hero h1 {
    margin-bottom: var(--space-md);
    font-size: var(--text-3xl);
  }

  .strikethrough {
    text-decoration: line-through;
    color: var(--text-muted);
    opacity: 0.6;
    margin-right: var(--space-lg);
  }

  .price-reveal {
    font-size: var(--text-5xl);
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .price-reveal.revealed {
    opacity: 1;
    transform: scale(1);
  }

  .price-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    margin-top: var(--space-md);
  }

  /* Plans Grid */
  .pricing-table {
    padding: var(--space-3xl) 0;
  }

  .plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .plan-card {
    padding: var(--space-xl);
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .plan-card.featured {
    border-color: var(--accent-primary);
    box-shadow: var(--shadow-glow-sm);
  }

  .plan-badge {
    position: absolute;
    top: calc(var(--space-md) * -1);
    left: 50%;
    transform: translateX(-50%);
    padding: var(--space-xs) var(--space-md);
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-tertiary));
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: var(--radius-full);
  }

  .enterprise-badge {
    background: linear-gradient(135deg, #475569, #1e293b);
  }

  .plan-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    padding-top: var(--space-md);
  }

  .plan-header h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-md);
  }

  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-sm);
  }

  .plan-price .currency {
    font-size: var(--text-xl);
    color: var(--text-muted);
  }

  .plan-price .amount {
    font-size: var(--text-4xl);
    font-weight: 700;
    font-family: var(--font-display);
    color: var(--accent-secondary);
  }

  .plan-price .period {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .plan-description {
    font-size: var(--text-sm);
    max-width: none;
  }

  .plan-features {
    list-style: none;
    margin-bottom: var(--space-xl);
    flex-grow: 1;
  }

  .plan-features li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--glass-border);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .plan-features .check {
    color: var(--accent-success);
    flex-shrink: 0;
  }

  .btn-full {
    width: 100%;
  }

  .enterprise-note {
    text-align: center;
    margin-top: var(--space-md);
    font-style: italic;
  }

  .enterprise .plan-price .amount {
    color: var(--text-muted);
  }

  /* FAQ */
  .faq-section {
    padding: var(--space-4xl) 0;
  }

  .faq-section h2 {
    margin-bottom: var(--space-3xl);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }

  .faq-item {
    padding: var(--space-xl);
  }

  .faq-item h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-sm);
    color: var(--accent-secondary);
  }

  .faq-item p {
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .strikethrough {
      display: block;
      margin-right: 0;
      margin-bottom: var(--space-sm);
    }

    .plans-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
