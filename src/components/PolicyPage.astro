---
import { t } from '../i18n';

interface Props {
  title: string;
  endpoint: string;
}

const { title, endpoint } = Astro.props;
const apiBaseUrl = t('api.baseUrl');
---

<section class="legal-page">
  <div class="container">
    <div class="legal-content glass fade-up">
      <div class="policy-content markdown-content" data-api-base={apiBaseUrl} data-endpoint={endpoint}>
        <div class="loading-state">
          <div class="spinner"></div>
          <p>Loading {title.toLowerCase()}...</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { marked } from 'marked';

  function showError(container: Element, message = 'Unable to load policy.') {
    container.innerHTML = `
      <div class="error-state">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <p>${message}</p>
        <p class="text-muted">Please try again later or contact support.</p>
      </div>
    `;
  }

  function initPolicyLoaders() {
    const containers = document.querySelectorAll('.policy-content[data-api-base]');

    containers.forEach(async (container) => {
      const apiBase = container.getAttribute('data-api-base');
      const endpoint = container.getAttribute('data-endpoint');

      if (!apiBase || !endpoint) {
        showError(container, 'Configuration error.');
        return;
      }

      try {
        const res = await fetch(`${apiBase}${endpoint}`);

        if (!res.ok) {
          showError(container, `Unable to load policy (${res.status}).`);
          return;
        }

        const contentType = res.headers.get('content-type') || '';
        if (contentType.includes('application/json')) {
          showError(container, 'Policy not available.');
          return;
        }

        const markdown = await res.text();

        if (!markdown || markdown.trim().length === 0) {
          showError(container, 'Policy content is empty.');
          return;
        }

        container.innerHTML = marked.parse(markdown);
      } catch (err) {
        showError(container, 'Unable to load policy.');
      }
    });
  }

  initPolicyLoaders();
</script>

<style>
  .legal-page {
    padding: var(--space-4xl) 0;
    min-height: 70vh;
  }

  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-2xl);
  }

  .loading-state {
    text-align: center;
    padding: var(--space-3xl);
  }

  .loading-state p {
    margin-top: var(--space-lg);
    color: var(--text-muted);
  }

  .spinner {
    width: 40px;
    height: 40px;
    margin: 0 auto;
    border: 3px solid var(--glass-border);
    border-top-color: var(--accent-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .error-state {
    text-align: center;
    padding: var(--space-2xl);
  }

  .error-state :global(svg) {
    color: var(--accent-tertiary);
    margin-bottom: var(--space-lg);
  }

  .error-state :global(p) {
    margin-bottom: var(--space-sm);
  }

  /* Markdown content styles */
  .markdown-content :global(h1),
  .markdown-content :global(h2),
  .markdown-content :global(h3),
  .markdown-content :global(h4),
  .markdown-content :global(h5),
  .markdown-content :global(h6) {
    font-family: var(--font-display);
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .markdown-content :global(h1) { font-size: var(--text-3xl); }
  .markdown-content :global(h2) { font-size: var(--text-2xl); }
  .markdown-content :global(h3) { font-size: var(--text-xl); }
  .markdown-content :global(h4) { font-size: var(--text-lg); }

  .markdown-content :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-xl);
  }

  .markdown-content :global(li) {
    margin-bottom: var(--space-sm);
    line-height: 1.6;
  }

  .markdown-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .markdown-content :global(a:hover) {
    color: var(--accent-success);
  }

  .markdown-content :global(code) {
    font-family: var(--font-mono);
    background: var(--bg-deep);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }

  .markdown-content :global(pre) {
    background: var(--bg-deep);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin-bottom: var(--space-md);
  }

  .markdown-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .markdown-content :global(blockquote) {
    border-left: 3px solid var(--accent-primary);
    padding-left: var(--space-lg);
    margin: var(--space-lg) 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .markdown-content :global(hr) {
    border: none;
    border-top: 1px solid var(--glass-border);
    margin: var(--space-xl) 0;
  }

  .markdown-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: var(--space-md);
  }

  .markdown-content :global(th),
  .markdown-content :global(td) {
    border: 1px solid var(--glass-border);
    padding: var(--space-sm) var(--space-md);
    text-align: left;
  }

  .markdown-content :global(th) {
    background: var(--bg-deep);
    font-weight: 600;
  }
</style>
