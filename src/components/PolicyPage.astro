---
import { t } from '../i18n';

interface Props {
  title: string;
  endpoint: string;
}

const { title, endpoint } = Astro.props;
const apiBaseUrl = t('api.baseUrl');
---

<section class="legal-page">
  <div class="container">
    <div class="legal-content glass fade-up">
      <div class="policy-content markdown-content" data-api-base={apiBaseUrl} data-endpoint={endpoint} aria-live="polite">
        <div class="loading-state">
          <div class="spinner" aria-hidden="true"></div>
          <p>Loading {title.toLowerCase()}...</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { marked } from 'marked';

  function showError(container: Element, message = 'Unable to load policy.') {
    container.innerHTML = `
      <div class="error-state" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="8" x2="12" y2="12"/>
          <line x1="12" y1="16" x2="12.01" y2="16"/>
        </svg>
        <p>${message}</p>
        <p class="text-muted">Please try again later or contact support.</p>
      </div>
    `;
  }

  function initPolicyLoaders() {
    const containers = document.querySelectorAll('.policy-content[data-api-base]');

    containers.forEach(async (container) => {
      const apiBase = container.getAttribute('data-api-base');
      const endpoint = container.getAttribute('data-endpoint');

      if (!apiBase || !endpoint) {
        showError(container, 'Configuration error.');
        return;
      }

      try {
        const res = await fetch(`${apiBase}${endpoint}`);

        if (!res.ok) {
          showError(container, `Unable to load policy (${res.status}).`);
          return;
        }

        const contentType = res.headers.get('content-type') || '';
        if (contentType.includes('application/json')) {
          showError(container, 'Policy not available.');
          return;
        }

        const markdown = await res.text();

        if (!markdown || markdown.trim().length === 0) {
          showError(container, 'Policy content is empty.');
          return;
        }

        container.innerHTML = marked.parse(markdown);
      } catch (err) {
        showError(container, 'Unable to load policy.');
      }
    });
  }

  initPolicyLoaders();
</script>

<style>
  @import '../styles/policy.css';
</style>
