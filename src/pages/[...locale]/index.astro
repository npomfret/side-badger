---
import HomePage from '../../components/HomePage.astro';
import { resolveLocale, type LocaleOrAlias } from '../../i18n';

export function getStaticPaths() {
  return [
    { params: { locale: undefined } },     // /
    { params: { locale: 'uk' } },          // /uk/
    { params: { locale: 'es' } },          // /es/
    { params: { locale: 'ja' } },          // /ja/
    { params: { locale: 'ar' } },          // /ar/
    { params: { locale: 'en-us' } },       // /en-us/ (American)
    { params: { locale: 'en-au' } },       // /en-au/ (Australian)
    { params: { locale: 'en-ca' } },       // /en-ca/ (Canadian)
    { params: { locale: 'en-gb' } },       // /en-gb/ (Actual)
  ];
}

const localeParam = (Astro.params.locale || 'en') as LocaleOrAlias;
const locale = resolveLocale(localeParam);
---

<HomePage locale={locale} />
