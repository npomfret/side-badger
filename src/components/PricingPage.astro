---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, type Locale } from '../i18n';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const checkIcon = `<svg class="check" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
---

<BaseLayout
  title={t('pricing.meta.title', locale)}
  description={t('pricing.meta.description', locale)}
  locale={locale}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": t('pricing.faq.q1.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q1.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q2.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q2.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q3.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q3.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q4.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q4.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q5.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q5.answer', locale)
          }
        },
        {
          "@type": "Question",
          "name": t('pricing.faq.q6.question', locale),
          "acceptedAnswer": {
            "@type": "Answer",
            "text": t('pricing.faq.q6.answer', locale)
          }
        }
      ]
    })} />
  </Fragment>

  <section class="pricing-hero">
    <div class="container text-center">
      <div class="fade-up">
        <h1>
          <span class="strikethrough">{t('pricing.hero.price1', locale)}</span>
          <span class="strikethrough">{t('pricing.hero.price2', locale)}</span>
          <span class="strikethrough">{t('pricing.hero.price3', locale)}</span>
        </h1>
        <h1 class="price-reveal gradient-text">{t('pricing.hero.finalPrice', locale)}</h1>
        <p class="price-subtitle">{t('pricing.hero.subtitle', locale)}</p>
      </div>
    </div>
  </section>

  <section class="pricing-table">
    <div class="container">
      <div class="plans-grid">
        <!-- The Only Plan -->
        <div class="plan-card glass fade-up featured">
          <div class="plan-badge">{t('pricing.plan.badge', locale)}</div>
          <div class="plan-header">
            <h2>{t('pricing.plan.name', locale)}</h2>
            <div class="plan-price">
              <span class="currency">{t('pricing.plan.currency', locale)}</span>
              <span class="amount">{t('pricing.plan.amount', locale)}</span>
              <span class="period">{t('pricing.plan.period', locale)}</span>
            </div>
            <p class="plan-description">{t('pricing.plan.description', locale)}</p>
          </div>

          <ul class="plan-features">
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature1', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature2', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature3', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature4', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature5', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature6', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.plan.feature7', locale)}</li>
          </ul>

          <a href={t('app.url', locale)} class="btn btn-primary btn-lg btn-confetti btn-full" target="_blank" rel="noopener">
            {t('pricing.plan.cta', locale)}
          </a>
        </div>

        <!-- Fake Enterprise Plan -->
        <div class="plan-card glass fade-up enterprise" data-delay="150">
          <div class="plan-badge enterprise-badge">{t('pricing.enterprise.badge', locale)}</div>
          <div class="plan-header">
            <h2>{t('pricing.enterprise.name', locale)}</h2>
            <div class="plan-price">
              <span class="currency">{t('pricing.plan.currency', locale)}</span>
              <span class="amount">{t('pricing.enterprise.amount', locale)}</span>
              <span class="period">{t('pricing.enterprise.period', locale)}</span>
            </div>
            <p class="plan-description">{t('pricing.enterprise.description', locale)}</p>
          </div>

          <ul class="plan-features">
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature1', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature2', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature3', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature4', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature5', locale)}</li>
            <li><Fragment set:html={checkIcon} />{t('pricing.enterprise.feature6', locale)}</li>
          </ul>

          <button class="btn btn-secondary btn-lg btn-full" id="enterprise-btn" data-alert={t('pricing.enterprise.alert', locale)}>
            {t('pricing.enterprise.cta', locale)}
          </button>

          <p class="enterprise-note text-muted text-sm">
            {t('pricing.enterprise.note', locale)}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <h2 class="text-center fade-up">{t('pricing.faq.title', locale)}</h2>

      <div class="faq-grid">
        <div class="faq-item glass fade-up">
          <h3>{t('pricing.faq.q1.question', locale)}</h3>
          <p>{t('pricing.faq.q1.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="100">
          <h3>{t('pricing.faq.q2.question', locale)}</h3>
          <p>{t('pricing.faq.q2.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="200">
          <h3>{t('pricing.faq.q3.question', locale)}</h3>
          <p>{t('pricing.faq.q3.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="300">
          <h3>{t('pricing.faq.q4.question', locale)}</h3>
          <p>{t('pricing.faq.q4.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="400">
          <h3>{t('pricing.faq.q5.question', locale)}</h3>
          <p>{t('pricing.faq.q5.answer', locale)}</p>
        </div>

        <div class="faq-item glass fade-up" data-delay="500">
          <h3>{t('pricing.faq.q6.question', locale)}</h3>
          <p>{t('pricing.faq.q6.answer', locale)}</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    import confetti from 'canvas-confetti';

    // Confetti on main CTA
    document.querySelectorAll('.btn-confetti').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const rect = (e.target as HTMLElement).getBoundingClientRect();
        const x = (rect.left + rect.width / 2) / window.innerWidth;
        const y = (rect.top + rect.height / 2) / window.innerHeight;

        confetti({
          particleCount: 150,
          spread: 100,
          origin: { x, y },
          colors: ['#8b5cf6', '#22d3ee', '#ec4899', '#34d399'],
          disableForReducedMotion: true
        });
      });
    });

    // Enterprise button easter egg
    const enterpriseBtn = document.getElementById('enterprise-btn');
    enterpriseBtn?.addEventListener('click', () => {
      const alertMessage = enterpriseBtn.getAttribute('data-alert') || "ðŸ¦¡ HONK HONK!";
      alert(alertMessage);

      confetti({
        particleCount: 200,
        spread: 160,
        origin: { y: 0.6 },
        colors: ['#8b5cf6', '#22d3ee', '#ec4899'],
        disableForReducedMotion: true
      });
    });

    // Price reveal animation with confetti
    setTimeout(() => {
      const priceReveal = document.querySelector('.price-reveal');
      if (priceReveal) {
        priceReveal.classList.add('revealed');
        confetti({
          particleCount: 80,
          spread: 70,
          origin: { y: 0.3 },
          colors: ['#34d399', '#22d3ee', '#8b5cf6'],
          disableForReducedMotion: true
        });
      }
    }, 800);
  </script>
</BaseLayout>

<style>
  /* Pricing Hero */
  .pricing-hero {
    padding: var(--space-4xl) 0 var(--space-2xl);
  }

  .pricing-hero h1 {
    margin-bottom: var(--space-md);
    font-size: var(--text-3xl);
  }

  .strikethrough {
    text-decoration: line-through;
    color: var(--text-muted);
    opacity: 0.6;
    margin-inline-end: var(--space-lg);
  }

  .price-reveal {
    font-size: var(--text-5xl);
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .price-reveal.revealed {
    opacity: 1;
    transform: scale(1);
  }

  .price-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    margin-top: var(--space-md);
  }

  /* Plans Grid */
  .pricing-table {
    padding: var(--space-3xl) 0;
  }

  .plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
    max-width: 900px;
    margin: 0 auto;
  }

  .plan-card {
    padding: var(--space-xl);
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .plan-card.featured {
    border-color: var(--accent-primary);
    box-shadow: var(--shadow-glow-sm);
  }

  .plan-badge {
    position: absolute;
    top: calc(var(--space-md) * -1);
    left: 50%;
    transform: translateX(-50%);
    padding: var(--space-xs) var(--space-md);
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-tertiary));
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: var(--radius-full);
  }

  .enterprise-badge {
    background: linear-gradient(135deg, #475569, #1e293b);
  }

  .plan-header {
    text-align: center;
    margin-bottom: var(--space-xl);
    padding-top: var(--space-md);
  }

  .plan-header h2 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-md);
  }

  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--space-xs);
    margin-bottom: var(--space-sm);
  }

  .plan-price .currency {
    font-size: var(--text-xl);
    color: var(--text-muted);
  }

  .plan-price .amount {
    font-size: var(--text-4xl);
    font-weight: 700;
    font-family: var(--font-display);
    color: var(--accent-secondary);
  }

  .plan-price .period {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .plan-description {
    font-size: var(--text-sm);
    max-width: none;
  }

  .plan-features {
    list-style: none;
    margin-bottom: var(--space-xl);
    flex-grow: 1;
  }

  .plan-features li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--glass-border);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .plan-features :global(.check) {
    color: var(--accent-success);
    flex-shrink: 0;
  }

  .btn-full {
    width: 100%;
  }

  .enterprise-note {
    text-align: center;
    margin-top: var(--space-md);
    font-style: italic;
  }

  .enterprise .plan-price .amount {
    color: var(--text-muted);
  }

  /* FAQ */
  .faq-section {
    padding: var(--space-4xl) 0;
  }

  .faq-section h2 {
    margin-bottom: var(--space-3xl);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
  }

  .faq-item {
    padding: var(--space-xl);
  }

  .faq-item h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-sm);
    color: var(--accent-secondary);
  }

  .faq-item p {
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .strikethrough {
      display: block;
      margin-inline-end: 0;
      margin-bottom: var(--space-sm);
    }

    .plans-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
