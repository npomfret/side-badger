---
import ParticleStarfield from '../components/ParticleStarfield.astro';
import EasterEggs from '../components/EasterEggs.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import LanguageDetection from '../components/LanguageDetection.astro';
import { t, locales, getLocalizedPath, isRTL, getAppUrl, type Locale } from '../i18n';

interface Props {
  title: string;
  description?: string;
  locale?: Locale;
}

const {
  title,
  description = t('meta.description'),
  locale = 'en',
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = Astro.site?.origin || 'https://sidebadger.com';
---

<!DOCTYPE html>
<html lang={locale} dir={isRTL(locale) ? 'rtl' : 'ltr'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a2818" />

    <!-- hreflang tags for SEO -->
    {locales.map((loc) => (
      <link
        rel="alternate"
        hreflang={loc}
        href={`${siteUrl}${getLocalizedPath(currentPath, loc)}`}
      />
    ))}
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}${getLocalizedPath(currentPath, 'en')}`} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Side Badger" />
    <meta property="og:locale" content={locale === 'uk' ? 'uk_UA' : 'en_US'} />

    <meta property="og:image" content="/images/logo-large-transparent-1200x628.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/logo-large-transparent-1200x628.png" />

    <link rel="icon" type="image/png" href="/images/logo-face-only-large.png" />
    <title>{title}</title>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Side Badger",
        "url": "https://sidebadger.com",
        "logo": "https://sidebadger.com/images/logo-large-transparent.png",
        "sameAs": []
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Side Badger",
        "url": "https://sidebadger.com"
      }
    </script>
  </head>
  <body>
    <ParticleStarfield />
    <EasterEggs />
    <LanguageDetection currentLocale={locale} />
    <div id="cursor-glow"></div>

    <slot name="header">
      <header class="site-header">
        <div class="christmas-lights">
          <div class="wire"></div>
          <ul class="lights">
            <li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li>
            <li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li>
            <li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li>
          </ul>
        </div>
        <nav class="header-nav container" style="position: relative;">
          <a href={getLocalizedPath('/', locale)} class="logo">
            <img src="/images/logo-transparent-small.png" alt={t('header.logoText', locale)} height="100" />
          </a>

          <ul class="nav-links flex items-center gap-lg">
            <li>
              <LanguageSwitcher currentLocale={locale} currentPath={currentPath} />
            </li>
            <li><a href={getAppUrl(locale)} class="btn btn-primary btn-launch">
              {t('header.launchApp', locale)}
            </a></li>
          </ul>
        </nav>
      </header>
    </slot>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-grid">
          <div class="footer-brand">
            <a href={getLocalizedPath('/', locale)} class="logo">
              <img src="/images/logo-transparent-small.png" alt={t('header.logoText', locale)} height="28" />
            </a>
            <p class="text-muted text-sm" set:html={t('footer.tagline', locale)} />
          </div>

          <div class="footer-links">
            <h4>{t('footer.product', locale)}</h4>
            <ul>
              <li><a href={getLocalizedPath('/pricing', locale)}>{t('footer.pricing', locale)}</a></li>
              <li><a href={getAppUrl(locale)}>{t('footer.launchApp', locale)}</a></li>
            </ul>
          </div>

          <div class="footer-links">
            <h4>{t('footer.legal', locale)}</h4>
            <ul>
              <li><a href={getLocalizedPath('/privacy', locale)}>{t('footer.privacy', locale)}</a></li>
              <li><a href={getLocalizedPath('/terms', locale)}>{t('footer.terms', locale)}</a></li>
              <li><a href={getLocalizedPath('/cookies', locale)}>{t('footer.cookies', locale)}</a></li>
            </ul>
          </div>
        </div>

        <div class="footer-bottom flex items-center justify-between">
          <p class="text-muted text-sm">&copy; {new Date().getFullYear()} {t('footer.copyright', locale)}</p>
          <p class="text-muted text-sm">{t('footer.madeWith', locale)}</p>
        </div>
      </div>
    </footer>

    <script>
      // Scroll-triggered fade-up animations
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.fade-up').forEach((el) => observer.observe(el));

      // Cursor glow effect
      const cursorGlow = document.getElementById('cursor-glow');
      let mouseX = 0, mouseY = 0;
      let glowX = 0, glowY = 0;

      document.addEventListener('mousemove', (e) => {
        mouseX = e.clientX;
        mouseY = e.clientY;
      });

      function animateCursor() {
        glowX += (mouseX - glowX) * 0.1;
        glowY += (mouseY - glowY) * 0.1;

        if (cursorGlow) {
          cursorGlow.style.transform = `translate(${glowX - 150}px, ${glowY - 150}px)`;
        }

        requestAnimationFrame(animateCursor);
      }

      // Only enable cursor glow on non-touch devices
      if (window.matchMedia('(pointer: fine)').matches) {
        animateCursor();
      }
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  @import '../styles/layout.css';
</style>
